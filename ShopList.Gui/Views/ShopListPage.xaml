<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ShopList.Gui.ViewModels"
             xmlns:model="clr-namespace:ShopList.Gui.Models"
             x:DataType="viewmodel:ShopListViewModel"
             x:Class="ShopList.Gui.Views.ShopListPage"
             Title="Lista de compras">
    <Grid
        RowDefinitions="Auto,*"
        Padding="8"
        RowSpacing="6"
        >

        <Grid
            Grid.Row="0"
            Grid.Column="0"
            ColumnDefinitions="Auto,*,Auto,Auto"
            RowDefinitions="Auto,Auto"
            RowSpacing="4"
            ColumnSpacing="4"
            >
            <Label
                Text="Producto:"
                Grid.Row="0"
                Grid.Column="0"
                VerticalOptions="Center"
                FontSize="Medium"
                HorizontalOptions="End"/>

            <Entry
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding NombreDelArticulo}"
                BackgroundColor="#f0f0f0"
                FontSize="Medium"/>
            <Label
                Text="Cantidad:"
                Grid.Row="1"
                Grid.Column="0"
                VerticalOptions="Center"
                FontSize="Medium"
                HorizontalOptions="End"/>
            <Entry
                Grid.Row="1"
                Grid.Column="1"
                BackgroundColor="#f0f0f0"
                FontSize="Medium"
                VerticalOptions="Center"
                Text="{Binding CatidadAComprar}"/>
            <Button
                Text="+"
                Grid.Row="0"
                Grid.Column="2"
                FontSize="Medium"
                Command="{Binding AgregarShopListItemCommand}"/>
            <Button
                Grid.Row="1"
                Grid.Column="2"
                Text="X"
                FontSize="Medium"/>
        </Grid>
        <CollectionView
            Grid.Column="0"
            Grid.Row="1"
            SelectionMode="Single"
            ItemsSource="{Binding Items}"
            EmptyView="Aun no se han registrado productos"
            BackgroundColor="#f0f0f0">

            <CollectionView.ItemTemplate>
                <DataTemplate
                    x:DataType="model:Item">
                    <Border>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5"/>
                        </Border.StrokeShape>
                        <Grid
                        ColumnDefinitions="Auto,*,Auto"
                        Padding="8,0">
                            <CheckBox
                               IsChecked="{Binding Comprado}"/>
                            <Label
                                Text="{Binding Nombre}"
                                Grid.Column="1"
                                VerticalOptions="Center"/>
                            <Label
                                Text="{Binding Cantidad }"
                                Grid.Column="2"
                                VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </Grid>
</ContentPage>